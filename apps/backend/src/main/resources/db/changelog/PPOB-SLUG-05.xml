<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="PPOB-SLUG-04-CREATE-TABLE" author="ltriyadi91">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="slugs" />
            </not>
        </preConditions>
        <createTable tableName="slugs">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_slugs"/>
            </column>
            <column name="category_id" type="bigint"/>
            <column name="slug" type="varchar(100)"/>
            <column name="created_at" type="timestamp" />
            <column name="created_by" type="text"/>
            <column name="updated_at" type="timestamp"/>
            <column name="updated_by" type="text"/>
            <column name="deleted_at" type="timestamp"/>
            <column name="deleted_by" type="text"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="slugs" baseColumnNames="category_id" constraintName="fk_category_slugs"
                            referencedTableName="categories" referencedColumnNames="id" />
        <sqlFile path="db/sql/PPOB-SLUG-05.sql"/>
    </changeSet>
</databaseChangeLog>
